<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left ">
      
         <%= render 'devise/shared/dummyphone'%>
    </div>
     

    <div class="col-lg-6 landing-right text-center d-flex align-items-center">
         <div class="form-login box">
            <h3 class="allicons brand-name-img"></h3>
          
            <span class="forgot-password">Forgot your password? </span> 

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="my-3">
                <% f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' , class:"form-control"  %>
              </div>

              <div class="mb-3">
                <%= f.submit "Send me reset password link" , class: "btn btn-outline-primary  btn-primary-color py-2"%>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
                        
        </div>
    </div>
  </div>
  
</div>








