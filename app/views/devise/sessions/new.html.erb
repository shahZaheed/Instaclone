<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left ">
      
         <%= render 'devise/shared/dummyphone'%>
    </div>
     

    <div class="col-lg-6 landing-right text-center d-flex align-items-center">
         <div class="form-login box">
            <h3 class="allicons brand-name-img"></h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
  
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email", class: " form-control" %>
            </div>

            <div class="mb-3">
             
              <%= f.password_field :password, autocomplete: "current-password" , placeholder: "Password", class: " form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="">
                <%= f.check_box :remember_me  ,class: "form-check-input" , checked: true %>
                <%= f.label :remember_me , class: "form-check-label"%>
              </div>
            <% end %>

            <div class="actions my-3">
              <%= f.submit "Log in" , class: "btn btn-outline-primary btn-primary-color py-2"%>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
         </div>
    </div>
  </div>
  
</div>

